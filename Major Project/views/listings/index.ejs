<% layout('layout/boilerplate.ejs') -%>

    <body>
        <h1 class="mt-2">All Listings</h1>
        <!-- <form action="/listings/new" method="GET">
            <button>Create New Listing</button>
        </form> -->


<div class="my-4 px-3 ml-4  ">
  <div class="row g-4 ">
    <% for (list of allListings) { %>
      <!-- <div class="col-sm-6 col-md-4 col-lg-4 "> -->
        <div class="col-sm-6 col-md-6 col-lg-4">
        <div class="card mb-4 ">
          <a href="/listings/<%= list._id %>">
            <img class="card-img-top custom-img" src="<%= list.image %>" alt="listing-image">
          </a>
          <div class="border-none d-flex flex-column justify-content-between p-2">
            <a href="/listings/<%= list._id %>" class="text-decoration-underline text-dark">
              <h5 class="card-title mb-2"><%= list.title %></h5>
            </a>
            <p class="card-text text-black">
              PKR <%= list.price.toLocaleString("en-PK") %> / night
            </p>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>







    </body>